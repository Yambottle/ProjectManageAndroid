<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_title"
        android:paddingTop="10dip"
        android:paddingBottom="10dip"
        android:orientation="horizontal"
        android:gravity="right" >
        
        <ImageButton
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:background="#00000000"
            android:src="@drawable/cancel32" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minHeight="100dip"
        android:background="@drawable/dialog_content"
        android:orientation="vertical" 
        android:gravity="center"
        android:padding="15dip" >
		<LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical" >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/contract_item_id"
                android:textStyle="bold" />
            <TextView 
                android:id="@+id/contract_item_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/contract_item_id" />
        </LinearLayout>
		<LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical" >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/contract_des"
                android:textStyle="bold" />
            <TextView 
                android:id="@+id/contract_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/contract_des" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical" >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/contract_item_type"
                android:textStyle="bold" />
            <TextView 
                android:id="@+id/contract_item_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/contract_item_type" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical" >
        </LinearLayout>
        <LinearLayout
            android:id="@+id/price_unitLL"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical" >
            <TextView 
                android:id="@+id/price_s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/price"
                android:textStyle="bold" />
            <TextView 
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/price" />
            <TextView
                android:id="@+id/unit" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/unit" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical" >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/des"
                android:textStyle="bold" />
            <TextView 
                android:id="@+id/des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/des" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical" >
            
            <TextView 
                android:id="@+id/goin_num_s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/goin_num"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/goin_num"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical" >
            
            <TextView
                android:id="@+id/goin_des_s" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/goin_des"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/goin_des"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:padding="5dip"
        android:background="@drawable/dialog_bottom"
        android:orientation="vertical" >
		
        <Button
            android:id="@+id/goin_confirm"
            android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:text="@string/goin_confirm"
        	android:layout_marginBottom="10dp"
        	android:textColor="@color/white"
        	android:background="@drawable/dialogbuttonshape" />
        
        <Button
            android:id="@+id/goin_cancel"
            android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:text="@string/goin_cancel"
        	android:textColor="@color/white"
        	android:background="@drawable/dialogbuttonshape" />
        
    </LinearLayout>

</LinearLayout>
